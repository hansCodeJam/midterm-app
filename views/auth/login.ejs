<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Login</title>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
      <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>  
      <style>
          body {
            font-family: "Lato", sans-serif;
        }
          .main-head{
              height: 150px;
              background: #FFF;
            
          }
          
          .sidenav {
              height: 100%;
              background-color: #000;
              overflow-x: hidden;
              padding-top: 20px;
          }
          
          
          .main {
              padding: 0px 10px;
          }
          
          @media screen and (max-height: 450px) {
              .sidenav {padding-top: 15px;}
          }
          
          @media screen and (max-width: 450px) {
              .login-form{
                  margin-top: 10%;
              }
          
              .register-form{
                  margin-top: 10%;
              }
          }
          
          @media screen and (min-width: 768px){
              .main{
                  margin-left: 40%; 
              }
          
              .sidenav{
                  width: 40%;
                  position: fixed;
                  z-index: 1;
                  top: 0;
                  left: 0;
              }
          
              .login-form{
                  margin-top: 80%;
              }
          
              .register-form{
                  margin-top: 20%;
              }
          }
          
          
          .login-main-text{
              margin-top: 20%;
              padding: 60px;
              color: #fff;
          }
          
          .login-main-text h2{
              font-weight: 300;
          }
          
          .btn-black{
              background-color: #000 !important;
              color: #fff;
          }

          
      </style>
    </head>
    <body>
        <form role="form" method="POST" action="/users/login">
            <fieldset>
              
            <div class="sidenav">
              <div class="login-main-text">
                  <img src="/images/nba-logo-transparent.png" id="nba-logo" width="50px"  />
                  <h2>NBA players stats<br> Login Page</h2>
                 <p>Login or register from here to access.</p>
              </div>
           </div>
           <div class="main">

           <% if (errors.length > 0) { %>
                <div class= "alert alert-danger alert-dismissible">
                    <button
                    type="button"
                    class="class"
                    data-dismiss="alert"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
                <%= errors %> 
                </div>
            <% } %>
           
              <div class="col-md-6 col-sm-12">
                 <div class="login-form">
                    <form role="form" method="POST" action="/users/login">
                       <div class="form-group">
                          <label>Email</label>
                          <input type="email" name="email" class="form-control" placeholder="Email Address">
                       </div>
                       <div class="form-group">
                          <label>Password</label>
                          <input type="password" name="password" class="form-control" placeholder="Password">
                       </div>
                       <button type="submit" class="btn btn-black">Login</button>
                       <button type="submit" class="btn btn-secondary" action="/users/register">Register</button>
                    </form>
                 </div>
              </div>
           </div>
            
    </body>
</html>